                vec4 cc1 = c1 / 255.0f;
                vec4 cc2 = c2 / 255.0f;
                vec4 cc3 = c3 / 255.0f;

                vec4 color = vec4(1.0f);
                color =  cc1 * (1.0f - u - v) + cc2 * u + cc3 * v;
                // Visualize depth
                //color.rgb = vec3(depth * depth);
                //color.rgb = vec3(depth);
