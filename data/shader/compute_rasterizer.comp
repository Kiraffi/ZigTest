                vec4 pos1 =  mvp * (matrix_padding * vec4(localTriangle2.pos, 1.0f));
                vec4 pos2 =  mvp * (matrix_padding * vec4(localTriangle3.pos, 1.0f));

                pos0.w = 1.0f / pos0.w;
                pos1.w = 1.0f / pos1.w;
                pos2.w = 1.0f / pos2.w;

