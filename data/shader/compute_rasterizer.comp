                    #if pixelsPerThread == 1
                        if(u >= 0.0f && v >= 0.0f && u + v <= 1.0f && d > localMin) { localMin = d; closestTriangleIndex = currTriangleIndex; }
                        u += uChange.y; v += vChange.y; d += dChange.y;

                    #else
                        vec4 dd = vec4(0);
