            vec2 maxPos = max(v1, max(v2, v3)).xy - topLeft;

            if(!( any(greaterThan(minPos, tileSizeScreen)) || any(lessThan(maxPos, vec2(0.0f)))) &&
                minZ <= 1.0f && maxZ > maxDepth)
